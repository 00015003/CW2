extends layout

block content
    if error 
            p.error Please, fill out all the inputs
            br
            br
    if worker == null 
        form.formCreate(method="POST")
            label(for='name') Name:
            input.name(type='text', id='name' placeholder='John Doe' name='name')
            label(for='email') Email:
            input.email(type='email', id='email' placeholder='JohnDoe@gmail.com' name='email')
            label(for='age') Age:
            input.age(type='number', name='age', id='age', placeholder='20')
            label Gender:
                input.gender(type='radio', id='male', name='gender', value='male' )
                label(for='gender') Male
                input.gender(type='radio', id='female', name='gender', value='female')
                label(for='gender') Female
            button.btn Add
    else
        form.formCreate(method="POST")
            label(for='name') Name:
            input.name(type='text', id='name' name='name' value=`${worker.name}`)
            label(for='email') Email:
            input.email(type='email', id='email' placeholder='JohnDoe@gmail.com' name='email' value=`${worker.email}`)
            label(for='age') Age:
            input.age(type='number', name='age', id='age', placeholder='20' value=`${worker.age}`)
            label Gender:
                input.gender(type='radio', id='male', name='gender', value='male', checked = `${worker.gender === "male" }` )
                label(for='gender') Male
                input.gender(type='radio', id='female', name='gender', value='female', checked = `${worker.gender === "female" }`)
                label(for='gender') Female
            button.btn Save