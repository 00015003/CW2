extends layout.pug 

block content
    a.add(href='/add') New user 
    .users
        if users.length
                table
                    tr 
                        th Name 
                        th Email 
                        th Age 
                        th Gender
                        th Change
                        th Delete
                    each user in users
                        tr 
                            td #{ user.name}
                            td #{ user.email}
                            td #{ user.age}
                            td #{ user.gender}
                            td
                                a(href='#')
                                    i.edit_img.fa-solid.fa-pen-to-square
                            td
                                a(href="#")
                                    i.delete_img.fa-solid.fa-trash
        else
            p Please add some user to database 